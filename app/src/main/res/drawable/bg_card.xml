<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Corner radius untuk rounded effect -->
    <corners android:radius="12dp" />

    <!-- Warna latar belakang -->
    <solid android:color="@color/white" />

    <!-- Border opsional -->
    <stroke
        android:width="1dp"
        android:color="#E0E0E0" /> <!-- abu muda -->

    <!-- Shadow hanya bisa dibuat jika pakai elevation di CardView,
         jadi shadow efek-nya dari CardView bukan di sini -->
</shape>
